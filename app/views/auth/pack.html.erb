<script>
var rowNum = 0;
function addRow() {
rowNum ++;
var row = '<p id="rowNum'+rowNum+'">Param Name: <input type="text" name="param_names[]" size="4" value=""> Param value: <input type="text" name="param_values[]" value=""> <input type="button" value="Remove" onclick="removeRow('+rowNum+');"></p>';
jQuery('#paramRows').append(row);
}
function removeRow(rnum) {
jQuery('#rowNum'+rnum).remove();
}

</script>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
<%= form_tag({action: :share}) do %>
<%= label_tag 'Choose file' %>
<%= select_tag(:sharable_id, options_from_collection_for_select(@sharables, :id, :file_file_name),class: 'form-control') %>
<div id="paramRows">

<input onclick="addRow();" type="button" value="Add Params" />

</div>
<%= submit_tag "submit", class: "btn btn-primary" %>
<% end %>

</div>
</div>
